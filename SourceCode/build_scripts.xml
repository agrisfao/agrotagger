<?xml version="1.0" encoding="UTF-8"?>
<project default="init" name="AgroTagger">

	<description>AgroTagger</description>
	
	<!-- directories declaration -->
	<property name="scriptDir" location="scripts" />
	<property name="classDir" location="scripts/applications" />
	<property name="sourceClass" location="bin" />
	<property name="libDir" location="scripts/lib" />
	<property name="sourceLib" location="lib" />
	<property name="dataDir" location="scripts/applications/data" />
	<property name="sourceData" location="data" />
	
	<target name="init">
		<tstamp />
		<!-- build directories structure -->
		<delete dir="${scriptDir}" />
		<mkdir dir="${scriptDir}" />
		<mkdir dir="${classDir}" />
		<mkdir dir="${libDir}" />
		<mkdir dir="${dataDir}" />
		
		<!-- copy all classes files -->
		<copy todir="${classDir}">
			<fileset dir="${sourceClass}">
				<exclude name="struts.properties" />
				<exclude name="struts.xml" />
				<exclude name="agristext*.properties" />
				<exclude name="default*.properties" />
			</fileset>
			<fileset dir=".">
				<include name="fao780" />
			</fileset>
		</copy>
		
		<!-- copy libraries -->
		<copy todir="${libDir}">
			<fileset dir="${sourceLib}">
				<include name="**/*" />
			</fileset>
		</copy>
		
		<!-- copy libraries -->
		<copy todir="${dataDir}">
			<fileset dir="${sourceData}">
				<include name="**/*" />
			</fileset>
		</copy>
		
		<tstamp />
	</target>
</project>